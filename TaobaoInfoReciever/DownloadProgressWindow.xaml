<Window x:Class="TaobaoInfoReciever.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaobaoInfoReciever"
        mc:Ignorable="d"
        Title="DownloadProgressWindow" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="statusbox" Margin="10,33,10,0" Height="33" VerticalAlignment="Top"></TextBlock>
        <ProgressBar x:Name="progress" Height="20" VerticalAlignment="Center" Margin="10,0,10,0" ValueChanged="progress_ValueChanged"/>
        <Button Content="CANCEL" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="87" Click="Button_Click"/>
    </Grid>
</Window>
